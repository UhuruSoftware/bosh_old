set -e

tar xzf ruby/ruby-1.9.3-p484.tar.gz
(
  set -e
  cd ruby-1.9.3-p484
  ./configure --prefix=${BOSH_INSTALL_TARGET} --disable-install-doc
  make
  make install
)

tar zxvf ruby/rubygems-2.1.11.tgz

(
  set -e
  cd rubygems-2.1.11

  ${BOSH_INSTALL_TARGET}/bin/ruby setup.rb

  if [[ $? != 0 ]] ; then
    echo "Cannot install rubygems"
    exit 1
  fi
)

${BOSH_INSTALL_TARGET}/bin/gem install ruby/bundler-1.5.2.gem --no-ri --no-rdoc
