---
cpi: vsphere
properties:
  uuid: <%= director_uuid %>
  static_ip: <%= ip %>
  pool_size: 1
  stemcell:
    name: bosh-stemcell
    version: <%= stemcell_version %>
  instances: 1
  mbus: nats://nats:0b450ada9f830085e2cdeff6@<%= ip %>:4222
  network:
    cidr: <%= net_cidr %>
    reserved:
      <% net_reserved.each do |reserved| %>
      - <%= reserved %>
      <% end %>
    static:
      - <%= net_static %>
    gateway: <%= net_gateway %>
    vlan: <%= net_id %>
